unsigned char receive_char()
{
  SCON0|=SCON0_REN__RECEIVE_ENABLED;
  while (SCON0_RI==0); // wait for Tx to be complete
  receive_data=SBUF0; // write character to buffer
  SCON0_RI = 0; // clear Tx flag
  return receive_data;
}
