void system_clock(){
  CLKSEL=CLKSEL_CLKDIV__SYSCLK_DIV_1 | CLKSEL_CLKSL__HFOSC0;

}
void cross_bar_enable(){
 XBR2 |= XBR2_XBARE__ENABLED;
//  XBR2_XBARE=1;
  XBR0 |= XBR0_URT0E__ENABLED;

}
void Uart_timer(){
  CKCON0 = CKCON0_T1M__SYSCLK;
  TMOD =TMOD_T1M__MODE2;
  TL1=0X96;
  TH1=0X96;
  TCON_TR1=1;

}
void timer_delay_20ms(){
  CKCON0 =CKCON0_T0M__PRESCALE | CKCON0_SCA__SYSCLK_DIV_48;
  TMOD |= TMOD_T0M__MODE1;
  TH0=0XD8;
  TL0=0X1F;
  TCON_TR0=1;
  while(TCON_TF0==0);
  TCON_TF0=0;
  TCON_TR0=0;

}
void timer_delay_30us(){
 // TMOD |= TMOD_T0M__MODE1;
  TH0=0XFF;
  TL0=0XF1;
  TCON_TR0=1;
  while(TCON_TF0==0);
  TCON_TF0=0;
  TCON_TR0=0;
}
void request(){
  DHT11=0;
  timer_delay_20ms();
  DHT11=1;
  //timer_delay_30us();
}
void response(){
 while (DHT11==1);
 while (DHT11==0);
 while (DHT11==1);
}
int Receive_data()    /* Receive data */
{
  int q,c=0;
  for (q=0; q<8; q++)
  {
    while(DHT11==0);/* check received bit 0 or 1 */
    timer_delay_30us();
    if(DHT11 == 1)  /* If high pulse is greater than 30ms */
    c = (c<<1)|(0x01);/* Then its logic HIGH */
    else    /* otherwise its logic LOW */
    c = (c<<1);
    while(DHT11==1);
  }
  return c;
}
void put_char(char c)
{
  SBUF0 = c; // write character to buffer
  while (!SCON0_TI); // wait for Tx to be complete
  SCON0_TI = 0; // clear Tx flag
}
void put_string(char* str)
{
  // send character until null-termination is found
  while (*str != '\x0')
  {
    put_char(*(str++));
  }
}

