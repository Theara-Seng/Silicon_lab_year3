void
crossbar_init ()
{
  XBR2 |= XBR2_XBARE__ENABLED;  //Enable pin
  XBR1 |= XBR1_PCA0ME__CEX0;    //Enable PCA

  P0MDOUT |= P0MDOUT_B0__PUSH_PULL;
}
void
pwm ()
{
  PCA0CPM0 |= PCA0CPM0_PWM__ENABLED;
  PCA0CPH0 = 113;
  PCA0CN0 = PCA0CN0_CR__RUN;
}
